{
  "name": "@roughapp/slack-bot",
  "private": true,
  "version": "0.25.0",
  "packageManager": "pnpm@10.11.0",
  "type": "module",
  "main": "./src/index.ts",
  "author": {
    "name": "George Czabania"
  },
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest --run --coverage",
    "fmt": "biome format --write",
    "tidy": "biome check --write --unsafe",
    "tidy:check": "biome check",
    "watch": "node --env-file=.env --watch ./src/index.ts",
    "start": "node --env-file=.env ./src/index.ts",
    "tsc": "tsc",
    "check": "tsc",
    "knip": "knip",
    "graphile-migrate": "env-cmd --silent graphile-migrate --config ./gmrc.cjs",
    "kanel": "env-cmd -x kanel --database=\\$DATABASE_URL"
  },
  "dependencies": {
    "@roughapp/sdk": "3.0.0",
    "@slack/bolt": "4.6.0",
    "@stayradiated/error-boundary": "4.3.0",
    "dotenv": "17.2.3",
    "graphile-migrate": "1.4.1",
    "kysely": "0.28.8",
    "memoize": "10.2.0",
    "pg": "8.16.3",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@types/pg": "8.15.6",
    "@vitest/coverage-v8": "4.0.10",
    "env-cmd": "11.0.0",
    "kanel": "3.16.0",
    "kanel-kysely": "0.8.0",
    "knip": "5.69.1",
    "test-fixture-factory": "2.1.0",
    "typescript": "5.9.3",
    "undici": "7.16.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.10"
  },
  "knip": {
    "ignore": [
      "src/**/*.test.ts",
      "src/utils/log-query.ts",
      "src/migrations/*.ts",
      "src/__generated__/**"
    ],
    "ignoreDependencies": [
      "graphile-migrate",
      "kanel",
      "kanel-kysely"
    ],
    "ignoreFiles": [
      ".kanelrc.cjs",
      "gmrc.cjs"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
